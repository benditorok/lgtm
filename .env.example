# LGTM Stack Environment Configuration
# Copy this file to .env and customize the values for your deployment

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# Grafana Admin Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# =============================================================================
# SERVICE VERSIONS (Docker Image Tags)
# =============================================================================

# OpenTelemetry Collector
OTEL_COLLECTOR_VERSION=0.91.0

# Grafana Stack Versions
GRAFANA_VERSION=10.2.0
LOKI_VERSION=2.9.0
TEMPO_VERSION=2.3.0
MIMIR_VERSION=2.10.0

# Prometheus Version
PROMETHEUS_VERSION=v2.47.0

# =============================================================================
# NETWORK & PORT CONFIGURATION
# =============================================================================

# External Host (for URLs and external access)
EXTERNAL_HOST=localhost

# Externally Exposed Ports
GRAFANA_PORT=3000
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318
OTEL_HEALTH_PORT=13133

# Internal Service Ports (container-only access)
LOKI_INTERNAL_PORT=3100
TEMPO_INTERNAL_PORT=3200
PROMETHEUS_INTERNAL_PORT=9090
MIMIR_INTERNAL_PORT=8080
OTEL_METRICS_PORT=8888
MIMIR_GOSSIP_PORT=7946

# =============================================================================
# DATA RETENTION & STORAGE
# =============================================================================

# Prometheus Data Retention Period (short-term buffer, data goes to Mimir for long-term storage)
PROMETHEUS_RETENTION=7d

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================

# Health Check Timeouts and Intervals
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_INTERVAL=10s
HEALTH_CHECK_RETRIES=3

# Extended Health Check Settings (for slower services)
EXTENDED_HEALTH_TIMEOUT=10s
EXTENDED_HEALTH_INTERVAL=30s
EXTENDED_HEALTH_RETRIES=3

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================

# Grafana Server Settings
GF_USERS_ALLOW_SIGN_UP=false
GF_SERVER_ROOT_URL=http://${EXTERNAL_HOST}:${GRAFANA_PORT}

# =============================================================================
# DEVELOPMENT / DEBUGGING
# =============================================================================

# Set to 'true' to enable debug logging in services
DEBUG_MODE=false

# Container restart policy (unless-stopped, always, on-failure, no)
RESTART_POLICY=unless-stopped
